<%- include('partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="glass-card p-4">
                <h2 class="text-center mb-4">Register</h2>
                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error_msg %>
                    </div>
                <% } %>
                <form action="/register" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control glass-input" id="username" name="username" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control glass-input" id="email" name="email" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control glass-input" id="password" name="password" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control glass-input" id="confirmPassword" name="confirmPassword" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="userType" class="form-label">I am a</label>
                        <select class="form-select glass-input" id="userType" name="userType" required>
                            <option value="">Select user type</option>
                            <option value="student">Student</option>
                            <option value="alumni">Alumni</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="profilePicture" class="form-label">Profile Picture</label>
                        <input type="file" class="form-control glass-input" id="profilePicture" name="profilePicture" accept="image/*">
                    </div>
                    <div class="mb-3">
                        <label for="bio" class="form-label">Bio</label>
                        <textarea class="form-control glass-input" id="bio" name="bio" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="skills" class="form-label">Skills (comma separated)</label>
                        <input type="text" class="form-control glass-input" id="skills" name="skills">
                    </div>
                    <div id="studentFields" style="display: none;">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="yearOfStudy" class="form-label">Year of Study</label>
                                <input type="number" class="form-control glass-input" id="yearOfStudy" name="yearOfStudy" min="1" max="4">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="studentDepartment" class="form-label">Department*</label>
                                <select class="form-select glass-input" id="studentDepartment" name="department" required>
                                    <option value="">Select Department</option>
                                    <option value="Computer Science">Computer Science</option>
                                    <option value="Information Technology">Information Technology</option>
                                    <option value="Electrical Engineering">Electrical Engineering</option>
                                    <option value="Mechanical Engineering">Mechanical Engineering</option>
                                    <option value="Civil Engineering">Civil Engineering</option>
                                    <option value="Chemical Engineering">Chemical Engineering</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div id="alumniFields" style="display: none;">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="graduationYear" class="form-label">Graduation Year</label>
                                <input type="number" class="form-control glass-input" id="graduationYear" name="graduationYear">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="alumniDepartment" class="form-label">Department*</label>
                                <select class="form-select glass-input" id="alumniDepartment" name="department" required>
                                    <option value="">Select Department</option>
                                    <option value="Computer Science">Computer Science</option>
                                    <option value="Information Technology">Information Technology</option>
                                    <option value="Electrical Engineering">Electrical Engineering</option>
                                    <option value="Mechanical Engineering">Mechanical Engineering</option>
                                    <option value="Civil Engineering">Civil Engineering</option>
                                    <option value="Chemical Engineering">Chemical Engineering</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="currentPosition" class="form-label">Current Position</label>
                                <input type="text" class="form-control glass-input" id="currentPosition" name="currentPosition">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="company" class="form-label">Company</label>
                                <input type="text" class="form-control glass-input" id="company" name="company">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="experience" class="form-label">Years of Experience</label>
                                <input type="number" class="form-control glass-input" id="experience" name="experience" min="0">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="linkedInUrl" class="form-label">LinkedIn URL</label>
                                <input type="url" class="form-control glass-input" id="linkedInUrl" name="linkedInUrl">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="expertise" class="form-label">Areas of Expertise (comma separated)</label>
                            <input type="text" class="form-control glass-input" id="expertise" name="expertise">
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary glass-btn">Register</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <p class="mb-0">Already have an account? <a href="/login" class="text-primary">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(26, 26, 46, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2),
                    0 0 0 1px rgba(255, 255, 255, 0.1),
                    0 0 20px rgba(0, 219, 222, 0.1);
        color: #ffffff;
    }

    .glass-input {
        background: rgba(255, 255, 255, 0.1) !important;
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        color: #ffffff !important;
        border-radius: 10px !important;
        padding: 0.75rem 1rem !important;
        transition: all 0.3s ease !important;
    }

    .glass-input:focus {
        background: rgba(255, 255, 255, 0.15) !important;
        border-color: rgba(0, 219, 222, 0.5) !important;
        box-shadow: 0 0 0 0.25rem rgba(0, 219, 222, 0.1) !important;
        color: #ffffff !important;
    }

    .glass-input::placeholder {
        color: rgba(255, 255, 255, 0.5) !important;
    }

    .glass-btn {
        background: linear-gradient(45deg, #00dbde, #fc00ff) !important;
        border: none !important;
        border-radius: 10px !important;
        padding: 0.75rem 1.5rem !important;
        font-weight: 500 !important;
        transition: all 0.3s ease !important;
    }

    .glass-btn:hover {
        transform: translateY(-2px) !important;
        box-shadow: 0 4px 15px rgba(0, 219, 222, 0.3) !important;
    }

    .form-label {
        color: #ffffff;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .text-primary {
        color: #00dbde !important;
    }

    .alert {
        background: rgba(220, 53, 69, 0.2);
        border: 1px solid rgba(220, 53, 69, 0.3);
        color: #ffffff;
        border-radius: 10px;
    }

    textarea.glass-input {
        min-height: 100px;
        resize: vertical;
    }
</style>

<script>
    document.getElementById('userType').addEventListener('change', function() {
        const studentFields = document.getElementById('studentFields');
        const alumniFields = document.getElementById('alumniFields');
        const studentDepartment = document.getElementById('studentDepartment');
        const alumniDepartment = document.getElementById('alumniDepartment');
        
        if (this.value === 'student') {
            studentFields.style.display = 'block';
            alumniFields.style.display = 'none';
            studentDepartment.required = true;
            alumniDepartment.required = false;
            alumniDepartment.value = ''; // Reset alumni department
        } else if (this.value === 'alumni') {
            studentFields.style.display = 'none';
            alumniFields.style.display = 'block';
            alumniDepartment.required = true;
            studentDepartment.required = false;
            studentDepartment.value = ''; // Reset student department
        } else {
            studentFields.style.display = 'none';
            alumniFields.style.display = 'none';
            studentDepartment.required = false;
            alumniDepartment.required = false;
            // Reset both departments
            studentDepartment.value = '';
            alumniDepartment.value = '';
        }
    });

    // Handle form submission
    document.querySelector('form').addEventListener('submit', function(e) {
        e.preventDefault();
        const userType = document.getElementById('userType').value;
        const studentDepartment = document.getElementById('studentDepartment');
        const alumniDepartment = document.getElementById('alumniDepartment');

        // Set the department value based on user type
        if (userType === 'student') {
            document.getElementById('alumniDepartment').removeAttribute('name');
            studentDepartment.name = 'department';
        } else if (userType === 'alumni') {
            document.getElementById('studentDepartment').removeAttribute('name');
            alumniDepartment.name = 'department';
        }

        this.submit();
    });

    // Initialize the form state
    document.addEventListener('DOMContentLoaded', function() {
        const userType = document.getElementById('userType');
        // Trigger the change event to set initial state
        userType.dispatchEvent(new Event('change'));
    });
</script>
